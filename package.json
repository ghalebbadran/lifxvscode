{
	"name": "lifxvscode",
	"displayName": "Lifx VS Code",
	"description": "Lifx integration with VS Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Debuggers",
		"Other"
	],
	"activationEvents": [
		"onCommand:lifxvscode.helloWorld",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes":{ 
		"commands": [
			{
				"command": "lifxvscode.helloWorld",
				"title": "Party!"
			}
		],
		"configuration": {
			"title": "Lifx Api",
			"properties": {
			  "lifxApi.ApiKey": {
				"type": "string",
				"default": null,
				"description": "Your API key from lifx site."
			  },
			  "lifxApi.TargetDevice": {
				"type": "string",
				"default": null,
				"description": "Specifies the device or group of devices you want to connect the plugin with."
			  }
			}
		  }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
