{
  "name": "lifxvscode",
  "displayName": "Lifx VS Code",
  "description": "Lifx integration with VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:lifxvscode.party",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lifxvscode.party",
        "title": "Party!"
      }
    ],
    "configuration": {
      "title": "Lifx VS Code",
      "properties": {
        "lifxvscode.TargetDevice": {
          "type": "string",
          "default": null,
          "description": "Specifies the device or group of devices you want to connect the plugin with."
        },
        "lifxvscode.Colors": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "inner objects",
            "properties": {
              "hue": {
                "type": "float",
                "description": "Hue of inner object"
              },
              "saturation": {
                "type": "float",
                "description": "Red of inner object"
							},
              "brightness": {
                "type": "float",
                "description": "Brightness of inner object"
              },
              "kelvin": {
                "type": "number",
                "description": "Kelvin of inner object"
              }
            }
          },
          "default": [
            {
							"hue":0.58241,
              "saturation": 1,
              "brightness": 0.4,
              "kelvin": 3500
            },
            {
							"hue":0.09659,
              "saturation": 1,
              "brightness": 0.4,
              "kelvin": 3500
            }
          ],
          "description": "Sets the color of the light when VS starts, and when there is no debugging."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "node-lifx-lan": "^0.5.0"
  }
}
